{
  "manifest_version": 3,
  "name": "uu-assist-pha",
  "version": "1.0.0",
  "description": "查询→选择任务→粘贴/上传文件→自动加日期→评论到 PHA。侧边栏版。",
  "permissions": [
    "storage",
    "sidePanel",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://pha.tp-link.com.cn/*",
    "https://api.deepseek.com/*",
    "https://review.tp-link.net/*"
  ],
  "background": {
    "service_worker": "sw.js"
  },
  "action": {
    "default_title": "PHA Helper",
    "default_popup": "panel.html"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://pha.tp-link.com.cn/*"
      ],
      "js": [
        "cs.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://review.tp-link.net/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
